<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportGate.App.Views.SellPage"
             Title="SellPage">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="12">
            <Label Text="Selecciona tipo de ingreso" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding EntryTypes}" SelectionMode="Single" SelectedItem="{Binding SelectedType}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="4" HasShadow="True" BorderColor="LightGray">
                            <Label Text="{Binding Description}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Precio base:" />
            <Label Text="{Binding SelectedType.BaseFee, StringFormat='{}{0:C}'}" />

            <Label Text="Personas" FontAttributes="Bold" />
            <StackLayout x:Name="PeopleContainer">
                <!-- controles generados en code-behind porque BindingCollections con steppers son más simples desde code -->
            </StackLayout>

            <Label Text="Total" FontAttributes="Bold" />
            <Label Text="{Binding Total, StringFormat='Total: {0:C}'}" FontSize="18" />

            <Button Text="Generar ticket" Command="{Binding GenerateTicketCommand}" />

            <Label Text="Último ticket:" FontAttributes="Bold" />
            <Label Text="{Binding LastCreatedTicket.Token}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>